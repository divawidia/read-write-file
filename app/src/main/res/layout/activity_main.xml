<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_judul"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:hint="@string/judul"
            android:inputType="textPersonName|textNoSuggestions"
            android:padding="@dimen/tiny_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="20dp"
            android:id="@+id/edit_konten"
            android:background="@drawable/shape"
            android:gravity="top|start"
            android:hint="@string/konten"
            android:inputType="textMultiLine|textNoSuggestions"
            android:padding="@dimen/tiny_margin" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/header_linear"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/tombol_baru"
                android:layout_width="90dp"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:text="@string/file_baru"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/tombol_buka"
                android:layout_width="90dp"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:textSize="14sp"
                android:text="@string/buka_file" />
            <Button
                android:id="@+id/tombol_simpan"
                android:layout_width="95dp"
                android:background="@drawable/shape"
                android:layout_height="match_parent"
                android:text="@string/simpan_file"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>